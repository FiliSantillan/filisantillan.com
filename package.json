{
    "name": "filisantillan",
    "description": "Fili Santillán: https://filisantillan.com/",
    "version": "4.0.0",
    "engines": {
        "ghost-api": "v3"
    },
    "main": "index.js",
    "config": {
        "posts_per_page": 10,
        "image_sizes": {
            "xxs": {
                "width": 30
            },
            "xs": {
                "width": 300
            },
            "s": {
                "width": 425
            },
            "m": {
                "width": 600
            },
            "l": {
                "width": 850
            },
            "xl": {
                "width": 1200
            },
            "xxl": {
                "width": 2000
            },
            "3xl": {
                "width": 3000
            }
        }
    },
    "keywords": [
        "ghost-theme",
        "ghost-blog",
        "html",
        "css",
        "javascript",
        "react",
        "frontend",
        "developer"
    ],
    "scripts": {
        "dev": "webpack --mode=development --watch",
        "prod": "webpack --mode=production"
    },
    "author": {
        "name": "Fili Santillán",
        "email": "fili@filisantillan.com",
        "url": "https://filisantillan.com"
    },
    "license": "MIT",
    "devDependencies": {
        "@babel/core": "^7.9.0",
        "@babel/preset-env": "^7.9.5",
        "babel-loader": "^8.1.0",
        "clean-webpack-plugin": "^0.1.19",
        "copy-webpack-plugin": "^5.1.1",
        "css-loader": "^0.28.11",
        "css-mqpacker": "^6.0.2",
        "extract-text-webpack-plugin": "^4.0.0-beta.0",
        "file-loader": "^1.1.11",
        "postcss": "^6.0.21",
        "postcss-font-magician": "^2.1.1",
        "postcss-import": "^11.1.0",
        "postcss-loader": "^2.1.3",
        "postcss-preset-env": "^6.7.0",
        "string-replace-loader": "^2.2.0",
        "style-loader": "^0.20.3",
        "uglifyjs-webpack-plugin": "^1.2.7",
        "url-loader": "^1.0.1",
        "webpack": "^4.43.0",
        "webpack-cli": "^3.3.11"
    },
    "dependencies": {
        "ghost-finder": "^3.0.1"
    }
}
